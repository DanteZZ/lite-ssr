{
  "compilerOptions": {
    "target": "ESNext",                 
    "module": "NodeNext",                   
    "moduleResolution": "NodeNext",      
    "outDir": "dist",                     
    "declaration": true,                   
    "strict": true,                        
    "esModuleInterop": true,               
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"   // Убедитесь, что путь до ваших типов правильный
    ]
  },
  "include": ["src/**/*", "node_modules/@lite-ssr/vue/types/hooks.d.ts" ],                 
  "exclude": ["node_modules", "dist"]      
}