{
  "compilerOptions": {
    "target": "ESNext",                 
    "module": "NodeNext",                   
    "moduleResolution": "NodeNext",      
    "outDir": "dist",                     
    "declaration": true,                   
    "strict": true,                        
    "esModuleInterop": true,               
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },             
  "exclude": ["node_modules", "dist"]      
}